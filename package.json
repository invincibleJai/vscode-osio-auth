{
  "name": "osio-auth-service",
  "displayName": "OpenShift.io Service Authorization",
  "description": "Enables authorization of OpenShift.io services",
  "version": "0.0.17",
  "author": "Red Hat",
  "publisher": "redhat",
  "preview": true,
  "contributors": [
    {
      "name": "Jaivardhan Kumar",
      "email": "jakumar@redhat.com"
    }
  ],
  "license": "Apache-2.0",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabric8-analytics/vscode-osio-auth/"
  },
  "bugs": {
    "url": "https://github.com/fabric8-analytics/vscode-osio-auth/issues"
  },
  "icon": "icon/openshift_logo.png",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "OSIO",
    "Authorization",
    "OpenShift"
  ],
  "activationEvents": [
    "*",
    "onCommand:extension.osioUnauthorize",
    "onCommand:extension.osioAuthorize",
    "onCommand:extension.stop"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.osioUnauthorize",
        "title": "Unauthorize Openshift.io Services"
      },
      {
        "command": "extension.osioAuthorize",
        "title": "Authorize Openshift.io Services"
      },
      {
        "command": "extension.stop",
        "title": "vscode-preview-server: Stop the web server"
      }
    ],
    "keybindings": [
      {
        "command": "extension.osioUnauthorize",
        "key": "ctrl+shift+j"
      },
      {
        "command": "extension.osioAuthorize",
        "key": "ctrl+shift+k"
      },
      {
        "command": "extension.stop",
        "key": "ctrl+shift+g"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.osioUnauthorize",
          "when": "resourceLangId == html"
        },
        {
          "command": "extension.osioAuthorize",
          "when": "resourceLangId == html"
        }
      ],
      "editor/context": [
        {
          "command": "extension.osioUnauthorize",
          "when": "resourceLangId == html"
        },
        {
          "command": "extension.osioAuthorize",
          "when": "resourceLangId == html"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/cors": "^2.8.1",
    "@types/mocha": "^2.2.32",
    "@types/node": "^7.0.5",
    "mocha": "^2.3.3",
    "tslint": "^4.3.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "request": "2.79.0",
    "@types/express": "4.0.37",
    "express": "^4.16.1",
    "typescript-rest": "^1.1.2"
  }
}
